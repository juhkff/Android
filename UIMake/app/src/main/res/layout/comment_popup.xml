<?xml version="1.0" encoding="utf-8"?>
<com.google.android.flexbox.FlexboxLayout
    android:background="@drawable/bottombar_border"
    android:padding="@dimen/textSep"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:alignItems="flex_end">
    <EditText
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:id="@+id/editText"
        android:background="@drawable/edit_shape"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minHeight="100dp"
        app:layout_flexGrow="1"
        android:gravity="top|left"
        android:paddingTop="@dimen/textSep"
        android:paddingBottom="@dimen/textSep"
        android:paddingLeft="@dimen/textSep2"
        android:paddingRight="@dimen/textSep2"/>
    <Button
        android:id="@+id/editButton"
        android:background="@drawable/button_shape3"
        android:layout_width="@dimen/button_width2"
        android:layout_height="@dimen/button_height2"
        android:text="@string/publish"
        android:textColor="@color/orange"
        android:textSize="@dimen/text_size"/>
</com.google.android.flexbox.FlexboxLayout>