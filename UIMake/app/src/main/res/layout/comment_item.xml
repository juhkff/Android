<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/layout_margin"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/user_img"
        android:layout_width="@dimen/imageLength"
        android:layout_height="@dimen/imageLength"
        android:src="@drawable/user_example" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/topbar_border"
        android:orientation="vertical">


        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:textSize="@dimen/name_size"
            android:singleLine="true"
            android:text="name1" />


        <TextView
            android:id="@+id/content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="22dp"
            android:textSize="@dimen/content_size"
            android:text="name2" />


        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/textSep"
            android:textSize="@dimen/time_size"
            android:text="时间" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_margin"
            tools:ignore="UselessLeaf" />
    </LinearLayout>
</LinearLayout>